<% layout ("layouts/boilerplate.ejs")-%>

<body>
    <div class="row mt-3" >
    <div class="col-8 offset-2" >  
    <h3>Create a New Listing</h3>  

    <form method="post" action="/listings" novalidate  class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input name="title" type="text" placeholder="Add a catchy title" class="form-control" required >
            <div class="valid-feedback">Title Looks good!</div>
            <div class="invalid-feedback">Title should be vaild.</div>               
        </div>

        <div class="mb-3">
            <label for="Description" class="form-lable">Description</label>
            <textarea name="Descripting" placeholder="Descripting" rows="7" class="form-control" required  ></textarea >
                <div class="invalid-feedback">Description should be vaild.</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-lable">Upload Listing Image</label>
            <input name="image" type="file"  class="form-control" required >
        </div>

        <div class="row">

            <div class="mb-3 col-md-4" >
                <label for="price" class="form-lable">Price</label>
                <input name="price" type="number" placeholder="price"  class="form-control" required >  
                <div class="invalid-feedback">Price should be vaild.</div> 
            </div>

            <div class="mb-3 col-md-8" >
                <label for="country" class="form-lable">Country</label>
                <input name="Country" type="text" placeholder="India" class="form-control" required >
                <div class="invalid-feedback">Country should be vaild.</div>
            </div>

        </div>
       

        <div class="mb-3">
            <label for="location" class="form-lable">Location</label>
            <input name="location" type="text" placeholder="Pune, Maharashtra" class="form-control" required >
            <div class="invalid-feedback">Location should be vaild.</div>
        </div>

        
        <button class="btn btn-dark add-btn mt-3" >Submit</button>
        <br><br>
    </form>
</div>
</div>
</body>

