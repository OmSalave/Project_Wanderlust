<% layout ("layouts/boilerplate.ejs")-%>

<div class="row mt-3" >
    <h1 class="col-8 offset-2">Signup on WanderLust</h1>
    <div class="col-8 offset-2" > 
        
        <form action="/signup" method="POST" class="needs-validation" novalidate>

            <div class="mb-3">
                <label for="username" class="form-lable">Username </label>
                <input name="username" id="username" type="text" placeholder="add a username" class="form-control" required >
                <div class="valid-feedback">username Looks good!</div>
                <div class="invalid-feedback">username should be vaild.</div>               
            </div>

            <div class="mb-3">
                <label for="email" class="form-lable">Email</label>
                <input name="email" id="emial" type="email" placeholder="add a email" class="form-control" required >
                <div class="valid-feedback">email Looks good!</div>
                <div class="invalid-feedback">eamil should be vaild.</div>               
            </div>

            <div class="mb-3">
                <label for="password" class="form-lable">password</label>
                <input name="password" id="password" type="password" placeholder="add a password" class="form-control" required >
                <div class="valid-feedback">Password Looks good!</div>
                <div class="invalid-feedback">password should be strong.</div>               
            </div>

            <button class="btn btn-success">SignUp</button>



        </form>



    </div>
</div>